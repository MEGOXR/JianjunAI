.message-images {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 12rpx;
  max-width: 500rpx;
}

/* 单张图片包装器 */
.message-image-wrapper {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
}

