.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100vw; 
  background-color: #f5f5f5;
  position: relative;
  overflow-x: hidden;
}

.chat-history {
  flex: 1;
  padding: 10rpx 20rpx 200rpx;  /* Increase bottom padding */
  overflow-y: auto;
  margin-bottom: 0;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
  background-color: #f5f5f5;
}

.timestamp {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 每条消息 */
.message-item {
  margin: 20rpx 0;  /* 调整消息项之间的整体间距 */
  display: flex;
  flex-direction: column;
  opacity: 0;
  animation: fadeIn 0.3s ease-in-out forwards;
  will-change: transform;
}

@keyframes fadeIn {
  to {
    opacity: 1;
  }
}
.user-message {
  align-self: flex-end;
  background-color: #007AFF;
  color: white;
  padding: 24rpx 32rpx;
  border-radius: 24rpx 24rpx 0 24rpx;
  max-width: 80%;
  word-wrap: break-word;
  margin-right: 12rpx; /* 统一右侧边距 */
}

.ai-message {
  align-self: flex-start;
  background-color: white;
  color: #333;
  padding: 24rpx 32rpx;
  border-radius: 24rpx 24rpx 24rpx 0;
  max-width: 80%;
  word-wrap: break-word;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  margin-left: 12rpx; /* 统一左侧边距 */
}

.input-area {
  position: fixed;
  bottom: 60rpx;
  left: 20rpx;
  right: 20rpx;
  background-color: white;
  padding: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  z-index: 100;
}

.input-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
  height: 72rpx;
}

