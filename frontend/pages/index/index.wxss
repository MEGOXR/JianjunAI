.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100vw; 
  background-color: #f5f5f5;
  position: relative;
  overflow-x: hidden;
}


.chat-history {
  flex: 1;
  padding: 10rpx 20rpx 220rpx;  /* 调整底部内边距适应新的输入框位置 */
  overflow-y: auto;
  margin-bottom: 0;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
  background-color: #f5f5f5;
}

.timestamp {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 每条消息 */
.message-item {
  margin: 20rpx 0;  /* 调整消息项之间的整体间距 */
  display: flex;
  flex-direction: column;
  opacity: 0;
  animation: fadeIn 0.3s ease-in-out forwards;
  will-change: transform;
}

@keyframes fadeIn {
  to {
    opacity: 1;
  }
}
.user-message {
  align-self: flex-end;
  background-color: #007AFF;
  color: white;
  padding: 24rpx 32rpx;
  border-radius: 24rpx 24rpx 0 24rpx;
  max-width: 80%;
  word-wrap: break-word;
  margin-right: 22rpx; /* 统一右侧边距，增加5px(约10rpx) */
  font-size: 32rpx;
  line-height: 1.6;
}

.ai-message {
  align-self: stretch; /* 占据容器全宽 */
  background-color: white;
  color: #333;
  padding: 24rpx 32rpx;
  border-radius: 24rpx 24rpx 24rpx 0;
  word-wrap: break-word;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  margin-left: 22rpx; /* 统一左侧边距，增加5px(约10rpx) */
  margin-right: 22rpx; /* 与用户消息右边界对齐，增加5px(约10rpx) */
  font-size: 32rpx;
  line-height: 1.6;
  position: relative; /* 为内部定位元素提供定位参照 */
}

/* 消息内容包装器 */
.message-content-wrapper {
  display: block; /* 改为块级布局 */
  position: relative;
}

.message-text {
  display: block;
  width: 100%; /* 文本占满整个宽度 */
  /* 移除右侧padding，让文本可以使用全部宽度 */
}

/* 内联复制按钮样式 */
.inline-copy-btn {
  display: inline-flex;
  width: 48rpx;
  height: 48rpx;
  align-items: center;
  justify-content: center;
  background: transparent;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.inline-copy-btn:active {
  background: rgba(0, 0, 0, 0.05);
  transform: scale(0.95);
}

.copy-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.4;
  transition: opacity 0.2s ease;
}

.inline-copy-btn:active .copy-icon {
  opacity: 0.7;
}

.input-area {
  position: fixed;
  bottom: 80rpx;
  left: 20rpx;
  right: 20rpx;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
  z-index: 100;
}

.input-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
  height: 72rpx;
}

/* 注释掉语音相关样式
*/

.input-length {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 8rpx;
}

/* 包裹 textarea 和自定义 placeholder 的容器 */
.input-wrapper {
  position: relative;
  flex: 1;
}

/* input 样式 */
.input-box {
  width: 100%;
  height: 72rpx;      /* 适合单行输入的高度 */
  padding: 0 20rpx;   /* 左右内边距 */
  font-size: 28rpx;
  line-height: 72rpx;  /* 使文本垂直居中 */
  border: none;       
  border-radius: 36rpx;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

/* 自定义 placeholder 层 */
.custom-placeholder {
  position: absolute;
  left: 20rpx;         /* 与 textarea 的左右内边距一致 */
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #ccc;         /* 根据需求调整 placeholder 颜色 */
  pointer-events: none; /* 点击时让事件穿透到 textarea */
  transition: color 0.2s ease;
}

.custom-placeholder.recording {
  color: #007AFF;      /* 录音时变为蓝色 */
}


.input-box:focus {
  background-color: #eeeeee;
}

.voice-btn {
  width: 100%; /* Take full width */
  height: 72rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  border: none;
  font-size: 32rpx;
  color: #333;
  margin: 0;
  padding: 0;
}


.voice-btn:active {
  background-color: #f0f0f0;
}


.send-btn {
  width: 84rpx;
  height: 84rpx;
  padding: 0;
  background-color: transparent;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease, opacity 0.2s ease;
}

.send-btn:active {
  transform: scale(0.9);
  opacity: 0.8;
}

.date-label {
  text-align: center;
  color: #888;
  margin-top: 20rpx;    /* 时间戳上方间距 */
  margin-bottom: 20rpx; /* 时间戳下方间距，增加与消息间距 */
  font-size: 24rpx;
}

.time-label {
  display: block;
  text-align: right;
  color: #888;
  font-size: 12px;
  margin-top: 5px;
}

/* 添加文本选择相关样式 */
.user-message text,
.ai-message text {
  user-select: text;
  -webkit-user-select: text;
}

.ai-message rich-text {
  display: inline-block;
  width: 100%;
  line-height: 1.4;
  word-break: break-word;
}

.phone-number {
  color: #007AFF;
  text-decoration: underline;
}

/* 已移除旧的控制按钮样式，复制按钮现在在消息框内部 */

/* 删除TTS相关样式，保留其他内容 */

/* 回到底部按钮样式 */
.scroll-to-bottom {
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 220rpx; /* 位于输入框正上方，适应新的底部距离 */
  width: 70rpx;
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
  transition: all 0.3s ease;
}

.scroll-to-bottom:active {
  transform: translateX(-50%) scale(0.95);
  background-color: rgba(245, 245, 245, 0.9);
}

.arrow-down-icon {
  width: 60rpx; /* 图标尺寸适中，与圆形底色协调 */
  height: 60rpx;
}

/* 建议问题样式 */
.suggestions-container {
  margin-top: 16rpx;
  padding: 0 32rpx 0 32rpx; /* 左对齐，统一边距 */
}

.suggestions-grid {
  display: flex;
  flex-direction: column; /* 垂直排列，每个问题占一行 */
  gap: 16rpx;
  align-items: flex-start; /* 左对齐 */
}

.suggestion-chip {
  display: inline-flex; /* 使用inline-flex实现自适应宽度 */
  align-items: center;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border: 1rpx solid #dee2e6;
  border-radius: 24rpx;
  padding: 20rpx 28rpx;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  min-width: 120rpx;
  max-width: 100%;
}

/* 点击状态反馈 */
.suggestion-chip:active {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  transform: scale(0.98);
}

.suggestion-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  position: relative;
  z-index: 1;
  line-height: 1.4;
}

/* 移除小箭头相关样式 */


/* 适配深色模式 */
@media (prefers-color-scheme: dark) {
  .suggestion-chip {
    /* 使用更柔和的深灰色，而不是纯黑色 */
    background: linear-gradient(135deg, #495057 0%, #343a40 100%);
    border-color: #6c757d;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  }
  
  .suggestion-text {
    /* 使用略带暖色的白色，减少对比度 */
    color: #f8f9fa;
  }
  
  .suggestion-chip:active {
    background: linear-gradient(135deg, #343a40 0%, #212529 100%);
    transform: scale(0.98);
  }
}

/* ========== 加载动画样式 ========== */

/* 加载消息气泡 - 保留 shimmer + 添加呼吸效果 */
.loading-message {
  background: linear-gradient(90deg, #f0f0f0 0%, #f8f8f8 50%, #f0f0f0 100%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite, breathe 2s ease-in-out infinite;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.1);
}

@keyframes shimmer {
  0% { background-position: -200% center; }
  100% { background-position: 200% center; }
}

/* 呼吸动画 - 微妙的缩放和阴影变化 */
@keyframes breathe {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.1);
  }
  50% {
    transform: scale(1.015);
    box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.2);
  }
}

/* 加载容器 - 水平布局，左对齐 */
.loading-container {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 4rpx 0;
}

/* 脉冲光点 - 模拟 AI 思考指示器 */
.pulse-dot {
  width: 12rpx;
  height: 12rpx;
  background: #007AFF;
  border-radius: 50%;
  flex-shrink: 0;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.3;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.5);
    box-shadow: 0 0 16rpx rgba(0, 122, 255, 0.6);
  }
}

/* 加载文字 - 淡入淡出过渡 */
.loading-text {
  color: #666;
  font-size: 30rpx;
  transition: opacity 0.3s ease;
  animation: textFade 2s ease-in-out infinite;
}

/* 文字淡入淡出动画 - 配合文案切换 */
@keyframes textFade {
  0%, 100% { opacity: 0.8; }
  50% { opacity: 1; }
}

/* ==================== 语音功能样式 ==================== */

/* 语音输入区域 */
.voice-input-area {
  position: fixed;
  bottom: 80rpx;
  left: 20rpx;
  right: 20rpx;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
  z-index: 100;
}

.voice-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
  height: 72rpx;
}

/* 语音按钮 */
.voice-btn {
  flex: 1;
  height: 72rpx;
  background: transparent;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  transform-origin: center;
  border: none;
  color: #333;
}

.voice-btn::after {
  border: none;
}

.voice-btn.recording {
  background: transparent;
  color: #007AFF;
  animation: recordingPulse 1.5s ease-in-out infinite;
}

@keyframes recordingPulse {
  0%, 100% { 
    opacity: 1;
  }
  50% { 
    opacity: 0.7;
  }
}

.voice-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.voice-text {
  font-size: 32rpx;
  font-weight: 500;
}

/* 模式切换按钮 */
.mode-switch-btn {
  width: 56rpx;
  height: 56rpx;
  padding: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: opacity 0.2s ease;
}

.mode-switch-btn:active {
  opacity: 0.7;
}

/* 语音录音悬浮层 - 豆包风格下方半圆渐变 */
.voice-modal {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 320rpx;
  background: linear-gradient(to top, #4A90E2 0%, #357ABD 40%, rgba(69, 144, 226, 0.8) 70%, rgba(69, 144, 226, 0.4) 90%, transparent 100%);
  border-radius: 50% 50% 0 0 / 60% 60% 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: modalSlideUp 0.3s ease-out;
  padding-bottom: 60rpx;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.voice-modal-content {
  background: transparent;
  border-radius: 0;
  padding: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

@keyframes modalSlideUp {
  from {
    opacity: 0;
    transform: translateY(100rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.voice-modal.canceling {
  background: linear-gradient(to top, #FF6B6B 0%, #FF8E53 40%, rgba(255, 107, 107, 0.8) 70%, rgba(255, 107, 107, 0.4) 90%, transparent 100%);
  animation: cancelPulse 0.3s ease;
}

@keyframes cancelPulse {
  0%, 100% { 
    transform: scale(1); 
  }
  50% { 
    transform: scale(1.05); 
  }
}

/* 波形容器 */
.waveform-container {
  height: 80rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.waveform-bars {
  display: flex;
  align-items: center;
  gap: 8rpx;
  height: 100%;
}

.waveform-bar {
  width: 6rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 3rpx;
  transition: height 0.1s ease;
  animation: waveformGlow 0.8s ease-in-out infinite alternate;
  margin: 0 2rpx;
}

@keyframes waveformGlow {
  from { 
    opacity: 0.6; 
  }
  to { 
    opacity: 1; 
  }
}

.voice-modal.canceling .waveform-bar {
  background: rgba(255, 255, 255, 0.8);
}

/* 录音信息 */
.recording-info {
  text-align: center;
  margin-bottom: 20rpx;
  order: -1;
}

.recording-duration {
  display: none;
}

.recording-hint {
  display: block;
  font-size: 28rpx;
  color: white;
  font-weight: 400;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

/* 取消提示 */
.cancel-hint {
  display: none;
}

.cancel-icon {
  width: 36rpx;
  height: 36rpx;
  filter: brightness(0) invert(1);
}

/* ==================== 流式语音识别样式 ==================== */

/* 流式语音识别遮罩层 */
.streaming-speech-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 流式语音识别容器 */
.streaming-speech-container {
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  margin: 0 40rpx;
  min-width: 600rpx;
  max-width: 80%;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.15);
}

/* 流式语音识别内容 */
.streaming-speech-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

/* AI免责声明文本 - 放在最底部 */
.disclaimer-text {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 0 30rpx 0; /* 增加底部内边距到30rpx，避免被小程序底部横线遮挡 */
  background-color: #f8f8f8;
  border-top: 1px solid #e5e5e5;
  z-index: 50; /* 低于输入框和其他UI元素 */
}

/* 麦克风图标区域 */
.streaming-speech-icon {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 麦克风图标 */
.mic-icon {
  width: 64rpx;
  height: 64rpx;
  z-index: 2;
}

/* 音频波形动画 */
.audio-wave {
  position: absolute;
  display: flex;
  gap: 6rpx;
  align-items: center;
  margin-left: 100rpx;
}

/* 波形条 */
.wave-bar {
  width: 6rpx;
  height: 20rpx;
  background: #007AFF;
  border-radius: 3rpx;
  animation: wave 1.2s infinite ease-in-out;
}

/* 波形动画 */
@keyframes wave {
  0%, 40%, 100% {
    transform: scaleY(0.4);
  }
  20% {
    transform: scaleY(1);
  }
}

/* 识别文本 */
.streaming-speech-text {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  line-height: 1.5;
  min-height: 48rpx;
  max-width: 500rpx;
  word-wrap: break-word;
}

/* 实时识别文本的动态效果 */
.streaming-speech-text::after {
  content: '';
  display: inline-block;
  width: 2rpx;
  height: 32rpx;
  background: #007AFF;
  margin-left: 4rpx;
  animation: blink 1s infinite;
}

/* 光标闪烁动画 */
@keyframes blink {
  0%, 50% {
    opacity: 1;
  }
  51%, 100% {
    opacity: 0;
  }
}

/* 底部录音界面 - 豆包风格半圆设计 */
.voice-recording-overlay {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 24vh; /* 控制在1/4以下 */
  z-index: 1000;
  pointer-events: none;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.voice-recording-container {
  width: 100vw;
  height: 100%;
  background: radial-gradient(ellipse at center bottom, 
    rgba(0, 122, 255, calc(0.9 + var(--volume-glow, 0) * 0.001)) 0%, 
    rgba(0, 122, 255, calc(0.6 + var(--volume-glow, 0) * 0.0008)) 30%, 
    rgba(0, 122, 255, calc(0.3 + var(--volume-glow, 0) * 0.0005)) 60%, 
    rgba(0, 122, 255, calc(0.1 + var(--volume-glow, 0) * 0.0002)) 80%, 
    rgba(0, 122, 255, 0.02) 100%);
  border-radius: 50% 50% 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.15s ease;
  backdrop-filter: blur(15rpx);
  padding: 60rpx 40rpx 80rpx;
  transform: scale(var(--volume-scale, 1));
  transform-origin: center bottom;
}

.voice-recording-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(ellipse at center bottom, 
    rgba(0, 122, 255, calc(0.3 + var(--volume-glow, 0) * 0.002)) 0%, 
    transparent 50%);
  border-radius: 50% 50% 0 0;
  pointer-events: none;
  transition: all 0.15s ease;
}

.voice-recording-container.canceling {
  background: radial-gradient(ellipse at center bottom, 
    rgba(255, 59, 48, calc(0.9 + var(--volume-glow, 0) * 0.001)) 0%, 
    rgba(255, 59, 48, calc(0.6 + var(--volume-glow, 0) * 0.0008)) 30%, 
    rgba(255, 59, 48, calc(0.3 + var(--volume-glow, 0) * 0.0005)) 60%, 
    rgba(255, 59, 48, calc(0.1 + var(--volume-glow, 0) * 0.0002)) 80%, 
    rgba(255, 59, 48, 0.02) 100%);
}

.voice-recording-container.canceling::before {
  background: radial-gradient(ellipse at center bottom, 
    rgba(255, 59, 48, calc(0.3 + var(--volume-glow, 0) * 0.002)) 0%, 
    transparent 50%);
}

/* 录音提示文字 - 在波形上方 */
.recording-tips {
  position: relative;
  text-align: center;
  color: white;
  margin-bottom: 30rpx;
  z-index: 2;
}

.recording-duration {
  display: none; /* 不显示秒数 */
}

.recording-hint,
.canceling-hint {
  display: block;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 0.9);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui;
}

.canceling-hint {
  color: rgba(255, 230, 230, 0.95);
}

/* 波形容器 - 在提示文字下方 */
.waveform-container {
  position: relative;
  width: 70%; /* 占屏幕宽度的70% */
  display: flex;
  justify-content: center;
  align-items: center;
}

.waveform-bars {
  display: flex;
  align-items: center;
  justify-content: space-between; /* 平均分布，更修长 */
  width: 100%;
  height: 60rpx;
}

.waveform-bar {
  width: 5rpx;
  background: rgba(255, 255, 255, 0.9);
