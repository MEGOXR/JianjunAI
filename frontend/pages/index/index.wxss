.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100vw; 
  background-color: #f5f5f5;
  position: relative;
  overflow-x: hidden;
}

/* 用户信息授权条 */
.user-info-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #e7f3ff;
  border-bottom: 1rpx solid #d6e8ff;
}

.user-info-text {
  font-size: 26rpx;
  color: #1890ff;
  flex: 1;
}

.auth-btn {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.chat-history {
  flex: 1;
  padding: 10rpx 20rpx 200rpx;  /* Increase bottom padding */
  overflow-y: auto;
  margin-bottom: 0;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
  background-color: #f5f5f5;
}

.timestamp {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 每条消息 */
.message-item {
  margin: 20rpx 0;  /* 调整消息项之间的整体间距 */
  display: flex;
  flex-direction: column;
  opacity: 0;
  animation: fadeIn 0.3s ease-in-out forwards;
  will-change: transform;
}

@keyframes fadeIn {
  to {
    opacity: 1;
  }
}
.user-message {
  align-self: flex-end;
  background-color: #007AFF;
  color: white;
  padding: 24rpx 32rpx;
  border-radius: 24rpx 24rpx 0 24rpx;
  max-width: 80%;
  word-wrap: break-word;
  margin-right: 22rpx; /* 统一右侧边距，增加5px(约10rpx) */
  font-size: 32rpx;
  line-height: 1.6;
}

.ai-message {
  align-self: stretch; /* 占据容器全宽 */
  background-color: white;
  color: #333;
  padding: 24rpx 32rpx;
  border-radius: 24rpx 24rpx 24rpx 0;
  word-wrap: break-word;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  margin-left: 22rpx; /* 统一左侧边距，增加5px(约10rpx) */
  margin-right: 22rpx; /* 与用户消息右边界对齐，增加5px(约10rpx) */
  font-size: 32rpx;
  line-height: 1.6;
}

.input-area {
  position: fixed;
  bottom: 60rpx;
  left: 20rpx;
  right: 20rpx;
  background-color: white;
  padding: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  z-index: 100;
}

.input-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
  height: 72rpx;
}

