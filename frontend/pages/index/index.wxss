.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100vw; 
  background-color: #f5f5f5;
  position: relative;
  overflow-x: hidden;
}


.chat-history {
  flex: 1;
  padding: 10rpx 20rpx 220rpx;  /* 调整底部内边距适应新的输入框位置 */
  overflow-y: auto;
  margin-bottom: 0;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
  background-color: #f5f5f5;
}

.timestamp {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 每条消息 */
.message-item {
  margin: 20rpx 0;  /* 调整消息项之间的整体间距 */
  display: flex;
  flex-direction: column;
  opacity: 0;
  animation: fadeIn 0.3s ease-in-out forwards;
  will-change: transform;
}

@keyframes fadeIn {
  to {
    opacity: 1;
  }
}
.user-message {
  align-self: flex-end;
  background-color: #007AFF;
  color: white;
  padding: 24rpx 32rpx;
  border-radius: 24rpx 24rpx 0 24rpx;
  max-width: 80%;
  word-wrap: break-word;
  margin-right: 22rpx; /* 统一右侧边距，增加5px(约10rpx) */
  font-size: 32rpx;
  line-height: 1.6;
}

.ai-message {
  align-self: stretch; /* 占据容器全宽 */
  background-color: white;
  color: #333;
  padding: 24rpx 32rpx;
  border-radius: 24rpx 24rpx 24rpx 0;
  word-wrap: break-word;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  margin-left: 22rpx; /* 统一左侧边距，增加5px(约10rpx) */
  margin-right: 22rpx; /* 与用户消息右边界对齐，增加5px(约10rpx) */
  font-size: 32rpx;
  line-height: 1.6;
}

.input-area {
  position: fixed;
  bottom: 80rpx;
  left: 20rpx;
  right: 20rpx;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
  z-index: 100;
}

.input-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
  height: 72rpx;
}

/* 注释掉语音相关样式
*/

.input-length {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 8rpx;
}

/* 包裹 textarea 和自定义 placeholder 的容器 */
.input-wrapper {
  position: relative;
  flex: 1;
}

/* input 样式 */
.input-box {
  width: 100%;
  height: 72rpx;      /* 适合单行输入的高度 */
  padding: 0 20rpx;   /* 左右内边距 */
  font-size: 28rpx;
  line-height: 72rpx;  /* 使文本垂直居中 */
  border: none;       
  border-radius: 36rpx;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

/* 自定义 placeholder 层 */
.custom-placeholder {
  position: absolute;
  left: 20rpx;         /* 与 textarea 的左右内边距一致 */
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #ccc;         /* 根据需求调整 placeholder 颜色 */
  pointer-events: none; /* 点击时让事件穿透到 textarea */
  transition: color 0.2s ease;
}

.custom-placeholder.recording {
  color: #007AFF;      /* 录音时变为蓝色 */
}


.input-box:focus {
  background-color: #eeeeee;
}

.voice-btn {
  width: 100%; /* Take full width */
  height: 72rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  border: none;
  font-size: 32rpx;
  color: #333;
  margin: 0;
  padding: 0;
}


.voice-btn:active {
  background-color: #f0f0f0;
}


.send-btn {
  width: 56rpx;
  height: 56rpx;
  padding: 14rpx;
  background-color: #007AFF;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.3s ease;
}

.send-btn:active {
  background-color: #0051D5;
}

.date-label {
  text-align: center;
  color: #888;
  margin-top: 20rpx;    /* 时间戳上方间距 */
  margin-bottom: 20rpx; /* 时间戳下方间距，增加与消息间距 */
  font-size: 24rpx;
}

.time-label {
  display: block;
  text-align: right;
  color: #888;
  font-size: 12px;
  margin-top: 5px;
}

/* 添加文本选择相关样式 */
.user-message text,
.ai-message text {
  user-select: text;
  -webkit-user-select: text;
}

.ai-message rich-text {
  display: inline-block;
  width: 100%;
  line-height: 1.4;
  word-break: break-word;
}

.phone-number {
  color: #007AFF;
  text-decoration: underline;
}

/* 回到底部按钮样式 */
.scroll-to-bottom {
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 220rpx; /* 位于输入框正上方，适应新的底部距离 */
  width: 70rpx;
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
  transition: all 0.3s ease;
}

.scroll-to-bottom:active {
  transform: translateX(-50%) scale(0.95);
  background-color: rgba(245, 245, 245, 0.9);
}

.arrow-down-icon {
  width: 60rpx; /* 图标尺寸适中，与圆形底色协调 */
  height: 60rpx;
}

/* 建议问题样式 */
.suggestions-container {
  margin-top: 16rpx;
  padding: 0 32rpx 0 32rpx; /* 左对齐，统一边距 */
}

.suggestions-grid {
  display: flex;
  flex-direction: column; /* 垂直排列，每个问题占一行 */
  gap: 16rpx;
  align-items: flex-start; /* 左对齐 */
}

.suggestion-chip {
  display: inline-flex; /* 使用inline-flex实现自适应宽度 */
  align-items: center;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border: 1rpx solid #dee2e6;
  border-radius: 24rpx;
  padding: 20rpx 28rpx;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  min-width: 120rpx;
  max-width: 100%;
}

/* 点击状态反馈 */
.suggestion-chip:active {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  transform: scale(0.98);
}

.suggestion-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  position: relative;
  z-index: 1;
  line-height: 1.4;
}

/* 移除小箭头相关样式 */


/* 适配深色模式 */
@media (prefers-color-scheme: dark) {
  .suggestion-chip {
    /* 使用更柔和的深灰色，而不是纯黑色 */
    background: linear-gradient(135deg, #495057 0%, #343a40 100%);
    border-color: #6c757d;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  }
  
  .suggestion-text {
    /* 使用略带暖色的白色，减少对比度 */
    color: #f8f9fa;
  }
  
  .suggestion-chip:active {
    background: linear-gradient(135deg, #343a40 0%, #212529 100%);
    transform: scale(0.98);
  }
}

/* 加载动画样式 */
.loading-message {
  background: linear-gradient(90deg, #f0f0f0 0%, #f8f8f8 50%, #f0f0f0 100%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% {
    background-position: -200% center;
  }
  100% {
    background-position: 200% center;
  }
}

.loading-container {
  display: flex;
  align-items: center;
  padding: 4rpx 0;
}

.loading-text {
  color: #666;
  font-size: 30rpx;
}

.loading-dots {
  color: #666;
  font-size: 30rpx;
  margin-left: 4rpx;
}

.loading-dots::after {
  content: '';
  animation: dots 1.5s infinite;
}

@keyframes dots {
  0%, 20% { 
    content: '.'; 
  }
  40% { 
    content: '..'; 
  }
  60%, 100% { 
    content: '...'; 
  }
}

/* ==================== 语音功能样式 ==================== */

/* 语音输入区域 */
.voice-input-area {
  position: fixed;
  bottom: 80rpx;
  left: 20rpx;
  right: 20rpx;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
  z-index: 100;
}

.voice-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
  height: 72rpx;
}

/* 语音按钮 */
.voice-btn {
  flex: 1;
  height: 72rpx;
  background: transparent;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  transform-origin: center;
  border: none;
  color: #333;
}

.voice-btn::after {
  border: none;
}

.voice-btn.recording {
  background: transparent;
  color: #007AFF;
  animation: recordingPulse 1.5s ease-in-out infinite;
}

@keyframes recordingPulse {
  0%, 100% { 
    opacity: 1;
  }
  50% { 
    opacity: 0.7;
  }
}

.voice-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.voice-text {
  font-size: 32rpx;
  font-weight: 500;
}

/* 模式切换按钮 */
.mode-switch-btn {
  width: 56rpx;
  height: 56rpx;
  padding: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: opacity 0.2s ease;
}

.mode-switch-btn:active {
  opacity: 0.7;
}

/* 语音录音悬浮层 - 豆包风格下方半圆渐变 */
.voice-modal {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 320rpx;
  background: linear-gradient(to top, #4A90E2 0%, #357ABD 40%, rgba(69, 144, 226, 0.8) 70%, rgba(69, 144, 226, 0.4) 90%, transparent 100%);
  border-radius: 50% 50% 0 0 / 60% 60% 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: modalSlideUp 0.3s ease-out;
  padding-bottom: 60rpx;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.voice-modal-content {
  background: transparent;
  border-radius: 0;
  padding: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

@keyframes modalSlideUp {
  from {
    opacity: 0;
    transform: translateY(100rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.voice-modal.canceling {
  background: linear-gradient(to top, #FF6B6B 0%, #FF8E53 40%, rgba(255, 107, 107, 0.8) 70%, rgba(255, 107, 107, 0.4) 90%, transparent 100%);
  animation: cancelPulse 0.3s ease;
}

@keyframes cancelPulse {
  0%, 100% { 
    transform: scale(1); 
  }
  50% { 
    transform: scale(1.05); 
  }
}

/* 波形容器 */
.waveform-container {
  height: 80rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.waveform-bars {
  display: flex;
  align-items: center;
  gap: 8rpx;
  height: 100%;
}

.waveform-bar {
  width: 6rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 3rpx;
  transition: height 0.1s ease;
  animation: waveformGlow 0.8s ease-in-out infinite alternate;
  margin: 0 2rpx;
}

@keyframes waveformGlow {
  from { 
    opacity: 0.6; 
  }
  to { 
    opacity: 1; 
  }
}

.voice-modal.canceling .waveform-bar {
  background: rgba(255, 255, 255, 0.8);
}

/* 录音信息 */
.recording-info {
  text-align: center;
  margin-bottom: 20rpx;
  order: -1;
}

.recording-duration {
  display: none;
}

.recording-hint {
  display: block;
  font-size: 28rpx;
  color: white;
  font-weight: 400;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

/* 取消提示 */
.cancel-hint {
  display: none;
}

.cancel-icon {
  width: 36rpx;
  height: 36rpx;
  filter: brightness(0) invert(1);
}
