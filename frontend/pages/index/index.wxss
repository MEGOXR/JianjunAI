/* 新版图片预览容器 - 网格布局 */
.image-preview-container-new {
  position: fixed;
  bottom: 170rpx; /* 在输入框上方 */
  left: 20rpx;
  right: 20rpx;
  background-color: #ffffff;
  padding: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.08);
  z-index: 99;
}

/* 图片网格 */
.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

/* 网格项 - 正方形 */
.image-grid-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%; /* 创建正方形 */
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #f8f8f8;
}

.grid-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 上传中状态 */
.image-grid-item.uploading::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.1);
}

/* 上传loading容器 */
.upload-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
}

/* 圆环loading */
.loading-ring {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #ffffff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 添加更多按钮 */
.image-grid-item.add-more {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border: 2rpx dashed #dee2e6;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
}

.image-grid-item.add-more:active {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  transform: scale(0.98);
}

.add-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 80rpx;
  color: #adb5bd;
  font-weight: 200;
  line-height: 1;
}

/* 新版删除按钮 */
