.input-length {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 8rpx;
}

/* 包裹 textarea 和自定义 placeholder 的容器 */
.input-wrapper {
  position: relative;
  flex: 1;
}

/* input 样式 */
.input-box {
  width: 100%;
  height: 72rpx;      /* 适合单行输入的高度 */
  padding: 0 20rpx;   /* 左右内边距 */
  font-size: 28rpx;
  line-height: 72rpx;  /* 使文本垂直居中 */
  border: none;       
  border-radius: 36rpx;
  background-color: white;
  box-sizing: border-box;
}

/* 自定义 placeholder 层 */
.custom-placeholder {
  position: absolute;
  left: 20rpx;         /* 与 textarea 的左右内边距一致 */
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #ccc;         /* 根据需求调整 placeholder 颜色 */
  pointer-events: none; /* 点击时让事件穿透到 textarea */
}


.input-box:focus {
  background-color: #f0f0f0;
}

.voice-btn {
  width: 100%; /* Take full width */
  height: 72rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  border: none;
  font-size: 32rpx;
  color: #333;
  margin: 0;
  padding: 0;
}

.voice-container .mode-switch-btn {
  position: absolute; /* Position absolutely within voice container */
  right: 20rpx; /* Align to right with margin */
  top: 50%;
  transform: translateY(-50%); /* Center vertically */
  width: 56rpx;
  height: 56rpx;
  padding: 10rpx;
  z-index: 2; /* Ensure it's above the voice button */
}

.voice-btn:active {
  background-color: #f0f0f0;
}

.mode-switch-btn {
  width: 56rpx;
  height: 56rpx;
  padding: 20rpx;
  transition: opacity 0.3s ease;
}

.send-btn {
  width: 56rpx;
  height: 56rpx;
  padding: 10rpx;
  color: #007AFF;
  transition: opacity 0.3s ease;
}

.send-btn:active {
  opacity: 0.6;
}

.date-label {
  text-align: center;
  color: #888;
  margin-top: 20rpx;    /* 时间戳上方间距 */
  margin-bottom: 20rpx; /* 时间戳下方间距，增加与消息间距 */
  font-size: 24rpx;
}

.time-label {
  display: block;
  text-align: right;
  color: #888;
  font-size: 12px;
  margin-top: 5px;
}

/* 添加文本选择相关样式 */
.user-message text,
.ai-message text {
  user-select: text;
  -webkit-user-select: text;
}

.ai-message rich-text {
  display: inline-block;
  width: 100%;
  line-height: 1.4;
  word-break: break-word;
}

.phone-number {
  color: #007AFF;
  text-decoration: underline;
}

/* 回到底部按钮样式 */
.scroll-to-bottom {
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 220rpx; /* 位于输入框正上方 */
  width: 70rpx;
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
  transition: all 0.3s ease;
}

.scroll-to-bottom:active {
  transform: translateX(-50%) scale(0.95);
  background-color: rgba(245, 245, 245, 0.9);
}

.arrow-down-icon {
  width: 60rpx; /* 图标尺寸适中，与圆形底色协调 */
  height: 60rpx;
}

/* 建议问题样式 */
.suggestions-container {
  margin-top: 16rpx;
  padding: 0 32rpx 0 32rpx; /* 左对齐，统一边距 */
}

.suggestions-grid {
  display: flex;
  flex-direction: column; /* 垂直排列，每个问题占一行 */
  gap: 16rpx;
  align-items: flex-start; /* 左对齐 */
}

.suggestion-chip {
  display: inline-flex; /* 使用inline-flex实现自适应宽度 */
  align-items: center;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border: 1rpx solid #dee2e6;
  border-radius: 24rpx;
  padding: 20rpx 28rpx;
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  min-width: 120rpx;
  max-width: 100%;
}

/* 点击状态反馈 */
.suggestion-chip:active {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  transform: scale(0.98);
}

.suggestion-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  position: relative;
  z-index: 1;
  line-height: 1.4;
}

/* 移除小箭头相关样式 */


/* 适配深色模式 */
@media (prefers-color-scheme: dark) {
  .suggestion-chip {
    /* 使用更柔和的深灰色，而不是纯黑色 */
    background: linear-gradient(135deg, #495057 0%, #343a40 100%);
    border-color: #6c757d;
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  }
  
  .suggestion-text {
    /* 使用略带暖色的白色，减少对比度 */
    color: #f8f9fa;
  }
  
  .suggestion-chip:active {
    background: linear-gradient(135deg, #343a40 0%, #212529 100%);
    transform: scale(0.98);
  }
}
