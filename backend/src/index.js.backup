function performTTSValidation(messageId) {
  const validationData = ttsValidationData.get(messageId);
  if (!validationData) {
    console.log(`âš ï¸  éªŒè¯æ•°æ®ä¸å­˜åœ¨: ${messageId}`);
    return;
  }

  const { sentChunks, receivedConfirmations, startTime, textLength } = validationData;
  
  console.log(`\nðŸ” TTSæ•°æ®éªŒè¯æŠ¥å‘Š - MessageID: ${messageId}`);
  console.log('=' .repeat(60));
  console.log(`ðŸ“Š åŸºç¡€æ•°æ®:`);
  console.log(`â€¢ æ–‡æœ¬é•¿åº¦: ${textLength} å­—ç¬¦`);
  console.log(`â€¢ åŽç«¯å‘é€: ${sentChunks.length} å—`);
  console.log(`â€¢ å‰ç«¯ç¡®è®¤: ${receivedConfirmations.length} å—`);
  console.log(`â€¢ æ•°æ®å®Œæ•´æ€§: ${receivedConfirmations.length}/${sentChunks.length} (${(receivedConfirmations.length/sentChunks.length*100).toFixed(1)}%)`);
  
  // æ£€æŸ¥ç¼ºå¤±çš„å—
  const sentIndices = new Set(sentChunks.map(c => c.chunkIndex));
  const receivedIndices = new Set(receivedConfirmations.map(c => c.chunkIndex));
  
  const missingChunks = [...sentIndices].filter(index => !receivedIndices.has(index));
  const duplicateChunks = receivedConfirmations.filter((item, index, arr) => 
    arr.findIndex(other => other.chunkIndex === item.chunkIndex) !== index
  );

  if (missingChunks.length > 0) {
    console.log(`âŒ ç¼ºå¤±å— (${missingChunks.length}ä¸ª): ${missingChunks.join(', ')}`);
  }
  
  if (duplicateChunks.length > 0) {
    console.log(`âš ï¸  é‡å¤å— (${duplicateChunks.length}ä¸ª): ${duplicateChunks.map(c => c.chunkIndex).join(', ')}`);
  }
  
  if (missingChunks.length === 0 && duplicateChunks.length === 0) {
    console.log(`âœ… æ•°æ®ä¼ è¾“å®Œæ•´ï¼Œæ— ç¼ºå¤±æˆ–é‡å¤`);
  }

  // æ•°æ®å“ˆå¸ŒéªŒè¯
  let hashMismatch = 0;
  receivedConfirmations.forEach(received => {
    const sent = sentChunks.find(s => s.chunkIndex === received.chunkIndex);
    if (sent && sent.audioDataHash !== received.validationHash) {
      hashMismatch++;
    }
  });
  
  if (hashMismatch > 0) {
    console.log(`âŒ æ•°æ®æŸå: ${hashMismatch} å—å“ˆå¸Œä¸åŒ¹é…`);
  } else {
    console.log(`âœ… æ•°æ®å®Œæ•´æ€§éªŒè¯é€šè¿‡`);
  }
  
  console.log('=' .repeat(60));
  
  // æ¸…ç†éªŒè¯æ•°æ®
  ttsValidationData.delete(messageId);
}

